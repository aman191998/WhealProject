<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryFragment"
    android:background="#1A1927">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/wet"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:paddingTop="20dp"
            android:layout_height="70dp"
            android:layout_weight="40"
            android:textSize="21dp"
            android:paddingLeft="5dp"
            android:text="Profile"
            android:background="@drawable/rec1"
            android:typeface="serif"
            android:textColor="#ffffff"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="30dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/my_vehicle"
                android:layout_width="0dp"
                android:paddingTop="20dp"
                android:layout_height="70dp"
                android:layout_weight="40"
                android:textSize="21dp"
                android:paddingLeft="5dp"
                android:text="My Vehicle"
                android:background="@drawable/rec2"
                android:typeface="serif"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="30dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/about_us"
                android:layout_width="0dp"
                android:paddingTop="20dp"
                android:layout_height="70dp"
                android:layout_weight="40"
                android:textSize="21dp"
                android:paddingLeft="5dp"
                android:text="About Us"
                android:background="@drawable/rec4"
                android:typeface="serif"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:paddingTop="20dp"
                android:layout_height="70dp"
                android:layout_weight="40"
                android:textSize="21dp"
                android:paddingLeft="5dp"
                android:text="Logout"
                android:background="@drawable/rec5"
                android:typeface="serif"
                android:textColor="#ffffff"/>
        </LinearLayout>

    </LinearLayout>




</ScrollView>